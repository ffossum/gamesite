{
  "name": "gamesite",
  "version": "0.1.0",
  "description": "A website for playing board and card games... some day.",
  "scripts": {
    "start": "node --harmony ./dist/server.js",
    "build": "npm run build-client && npm run build-server",
    "build-docker": "npm run build-client-docker && npm run build-server-docker",
    "build-server": "node node_modules/webpack/bin/webpack --colors --display-error-details --config configs/webpack.server.js",
    "build-server-docker": "node node_modules/webpack/bin/webpack --colors --display-error-details --config configs/webpack.server-docker.js",
    "build-client": "node node_modules/webpack/bin/webpack --colors --display-error-details --config configs/webpack.client.js",
    "build-client-docker": "node node_modules/webpack/bin/webpack --colors --display-error-details --config configs/webpack.client-docker.js",
    "watch-server": "node node_modules/webpack/bin/webpack --watch --verbose --colors --display-error-details --config configs/webpack.server-watch.js",
    "watch-client": "node node_modules/webpack-dev-server/bin/webpack-dev-server --config configs/webpack.client-watch.js",
    "watch": "node node_modules/concurrently --kill-others \"npm run watch-server\" \"npm run watch-client\"",
    "lint": "node node_modules/eslint/bin/eslint src",
    "test": "node node_modules/flow-bin/cli check && npm run lint && npm run coverage",
    "tdd": "mocha-webpack --watch --require babel-polyfill --webpack-config configs/webpack.server.js \"src/**/*.spec.js\"",
    "coverage": "NODE_ENV=test nyc mocha-webpack --require babel-polyfill --webpack-config configs/webpack.server.js \"src/**/*.spec.js\""
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "exclude": [
      ".tmp",
      "configs",
      "node_modules",
      "**/*.spec.js"
    ]
  },
  "author": "Fredrik Fossum <fredrik.fossum@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^1.0.0",
    "bluebird": "^3.3.3",
    "classnames": "^2.2.3",
    "cookie": "^0.3.1",
    "deepstream.io": "^2.1.2",
    "deepstream.io-client-js": "^2.1.1",
    "fast-json-patch": "^1.0.0",
    "isomorphic-fetch": "^2.2.1",
    "jsonwebtoken": "^7.0.1",
    "koa": "^2.0.0",
    "koa-bodyparser": "^3.0.0",
    "koa-compress": "^2.0.0",
    "koa-convert": "^1.2.0",
    "koa-favicon": "^2.0.0",
    "koa-passport": "^2.0.1",
    "koa-router": "^7.0.1",
    "koa-static": "^2.0.0",
    "lodash": "^4.17.3",
    "moment": "2.14.1",
    "normalize.css": "^4.0.0",
    "passport-local": "^1.0.0",
    "react": "15.4.1",
    "react-addons-css-transition-group": "^15.3.0",
    "react-dom": "15.4.1",
    "react-onclickoutside": "^5.0.0",
    "react-redux": "^5.0.0",
    "react-router": "^3.0.0",
    "react-router-redux": "^4.0.0",
    "redux": "^3.1.1",
    "redux-saga": "^0.14.0",
    "reselect": "^2.5.1",
    "rethinkdbdash": "^2.3.13",
    "shortid": "^2.2.4",
    "validator": "^5.1.0"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "babel-core": "^6.4.5",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.1",
    "babel-plugin-istanbul": "^3.1.2",
    "babel-polyfill": "^6.3.14",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-react-hmre": "^1.0.1",
    "babel-preset-stage-0": "^6.3.13",
    "chai": "^3.5.0",
    "concurrently": "^3.1.0",
    "css-loader": "^0.23.1",
    "eslint": "^3.14.0",
    "eslint-import-resolver-webpack": "^0.8.1",
    "eslint-plugin-flowtype": "^2.30.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.9.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "flow-bin": "^0.38.0",
    "glob": "^7.0.0",
    "mocha": "^3.2.0",
    "mocha-webpack": "^0.7.0",
    "nyc": "^10.1.2",
    "postcss-cssnext": "^2.4.0",
    "postcss-import": "^9.0.0",
    "postcss-loader": "^1.0.0",
    "style-loader": "^0.13.0",
    "webpack": "^1.12.12",
    "webpack-dev-server": "^1.14.1"
  }
}
