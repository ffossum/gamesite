{
  "name": "gamesite",
  "version": "0.1.0",
  "description": "A website for playing board and card games... some day.",
  "scripts": {
    "start": "node node_modules/forever/bin/forever --minUptime 1000 --spinSleepTime 1000 -c \"node --harmony\" ./dist/server.js",
    "build": "npm run build-client && npm run build-server",
    "build-server": "node node_modules/webpack/bin/webpack --colors --display-error-details --config configs/webpack.server.js",
    "build-client": "node node_modules/webpack/bin/webpack --colors --display-error-details --config configs/webpack.client.js",
    "watch-server": "node node_modules/webpack/bin/webpack --watch --verbose --colors --display-error-details --config configs/webpack.server-watch.js",
    "watch-server-start": "node node_modules/just-wait --pattern \"dist/*.js\" && npm run start",
    "watch-client": "node node_modules/webpack-dev-server/bin/webpack-dev-server --config configs/webpack.client-watch.js",
    "lint": "node node_modules/eslint/bin/eslint src",
    "build-test": "node node_modules/webpack/bin/webpack --colors --config configs/webpack.test.js",
    "watch-build-test": "node node_modules/webpack/bin/webpack --colors --config configs/webpack.test-watch.js",
    "test": "npm run lint && npm run coverage",
    "coverage": "node node_modules/karma/bin/karma start karma.conf.js",
    "watch-test": "(cd test && mocha test.js --watch)"
  },
  "author": "Fredrik Fossum <fredrik.fossum@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^0.8.5",
    "bluebird": "^3.3.3",
    "classnames": "^2.2.3",
    "cookie": "^0.3.1",
    "deepstream.io": "^2.0.1",
    "deepstream.io-client-js": "^2.0.0",
    "fast-json-patch": "^1.0.0",
    "forever": "^0.15.1",
    "history": "^3.0.0",
    "isomorphic-fetch": "^2.2.1",
    "jsonwebtoken": "^7.0.1",
    "koa": "^2.0.0",
    "koa-bodyparser": "^3.0.0",
    "koa-compress": "^2.0.0",
    "koa-convert": "^1.2.0",
    "koa-favicon": "^2.0.0",
    "koa-passport": "^2.0.1",
    "koa-router": "^7.0.1",
    "koa-static": "^2.0.0",
    "lodash": "4.14.0",
    "moment": "2.14.1",
    "normalize.css": "^4.0.0",
    "passport-local": "^1.0.0",
    "postcss-import": "^8.0.2",
    "raw-loader": "^0.5.1",
    "react": "15.4.1",
    "react-addons-css-transition-group": "^15.3.0",
    "react-dom": "15.4.1",
    "react-onclickoutside": "^5.0.0",
    "react-redux": "^4.1.0",
    "react-router": "^2.0.0",
    "react-router-redux": "^4.0.0",
    "redux": "^3.1.1",
    "redux-thunk": "^2.0.1",
    "reselect": "^2.5.1",
    "rethinkdbdash": "^2.3.13",
    "shortid": "^2.2.4",
    "socket.io": "^1.4.5",
    "socket.io-client": "^1.4.5",
    "source-map-support": "0.4.3",
    "validator": "^5.1.0"
  },
  "devDependencies": {
    "babel-core": "^6.4.5",
    "babel-eslint": "^6.0.0-beta.6",
    "babel-istanbul": "^0.8.0",
    "babel-istanbul-loader": "^0.1.0",
    "babel-loader": "^6.2.1",
    "babel-polyfill": "^6.3.14",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-react-hmre": "^1.0.1",
    "babel-preset-stage-0": "^6.3.13",
    "chai": "^3.5.0",
    "coveralls": "^2.11.9",
    "css-loader": "^0.23.1",
    "eslint": "^2.9.0",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-import-resolver-webpack": "^0.3.1",
    "eslint-plugin-import": "^1.6.1",
    "eslint-plugin-jsx-a11y": "^1.0.4",
    "eslint-plugin-react": "^5.0.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "glob": "^7.0.0",
    "just-wait": "^1.0.3",
    "karma": "^1.1.0",
    "karma-coverage": "^1.0.0",
    "karma-mocha": "^1.1.1",
    "karma-mocha-reporter": "^2.0.0",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-webpack": "^1.7.0",
    "mocha": "^2.4.5",
    "phantomjs-prebuilt": "^2.1.7",
